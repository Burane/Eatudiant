<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/root"
        >

    <ImageView
            android:id="@+id/recipeImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="Recipe image">
    </ImageView>

    <TextView
            android:id="@+id/recipeName"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/recipeImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <TextView
            android:id="@+id/recipeTime"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/recipeImage"
            app:layout_constraintTop_toBottomOf="@+id/recipeName"
            android:layout_marginTop="24dp">
    </TextView>

    <TextView
            android:id="@+id/recipePrice"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/recipeTime"
            app:layout_constraintTop_toTopOf="@+id/recipeTime">
    </TextView>

    <TextView
            android:id="@+id/recipeQuantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/recipePrice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/recipePrice">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>
